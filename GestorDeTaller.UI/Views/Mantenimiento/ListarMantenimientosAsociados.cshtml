@model IEnumerable<GestorDeTaller.Model.Mantenimiento>

@{ ViewData["Title"] = "ListarMantenimientosAsociados"; }
@{
    Layout = "~/Views/Restringido/_Layout2.cshtml";
}
@{
    Layout = "~/Views/Shared/_Layout.cshtml"; //Esta sería la plantilla original del sitio web.
}
<h1>Mantenimientos Asociados</h1>

<p>
    <a class="btn btn-primary" asp-controller="Mantenimiento" asp-action="CrearMantenimiento">Agregar Mantenimiento</a>
</p>
<table class="table">
    <thead>
        <tr>

            <th>
                @Html.DisplayNameFor(model => model.Descripcion)
            </th>

            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
<tr>

    <td>
        @Html.DisplayFor(modelItem => item.Descripcion)
    </td>

    <td>
        <a asp-action="EditarMantenimiento" asp-route-id="@item.Id" class="btn btn-primary">Editar</a>
        <a asp-action="DetallesDeMantenimiento" asp-route-id="@item.Id" class="btn btn-primary">Detalles</a>
        <a asp-controller="Repuestos" asp-action="ListarRepuestosAsociadosAMantenimiento" asp-route-id="@item.Id" class="btn btn-primary">Detalle de Repuestos Para Mantenimiento</a>
    </td>


</tr>}
    </tbody>
</table>
<br>
<br>
<br>
<td>
    <a href="javascript: history.go(-1)" class="btn btn-primary">Cancelar</a>
</td>
