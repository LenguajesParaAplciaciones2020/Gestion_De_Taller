@model IEnumerable<GestorDeTaller.Model.Mantenimiento>

@{ ViewData["Title"] = "ListarMantenimientosDisponiblesParaArticulo"; }
@{
    Layout = "~/Views/Restringido/_Layout2.cshtml";
}
@{
    Layout = "~/Views/Shared/_Layout.cshtml"; //Esta sería la plantilla original del sitio web.
}
<h1>Mantenimientos disponibles para el artículo</h1>


<table class="table">
    <thead>
        <tr>

            <th>
                @Html.DisplayNameFor(model => model.Descripcion)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.CostoFijo)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.CostoDeRepuestos)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
<tr>

    <td>
        @Html.DisplayFor(modelItem => item.Descripcion)
    </td>
    <td>
        @Html.DisplayFor(modelItem => item.CostoFijo)
    </td>
    <td>
        @Html.DisplayFor(modelItem => item.CostoDeRepuestos)
    </td>
    <td>
        <a asp-action="AgregarMantenimientoAOrdenRecibidas" asp-route-id="@item.Id" class="btn btn-success">Seleccionar mantenimiento</a>
        


    </td>
</tr>}
    </tbody>
</table>
<br>
<br>
<div>
    <a href="javascript: history.go(-1)" class="btn btn-success">Regresar</a>
</div>