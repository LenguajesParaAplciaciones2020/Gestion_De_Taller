@model GestorDeTaller.Model.Repuesto
@{ ViewData["Title"] = "DetallesDeRepuesto"; }
@{
    Layout = "~/Views/Restringido/_Layout2.cshtml";
}
@{
    Layout = "~/Views/Shared/_Layout.cshtml"; //Esta sería la plantilla original del sitio web.
}
<h1>Detalles de repuesto</h1>

<div>

    <hr />
    <dl class="row">
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Nombre)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Nombre)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Precio)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Precio)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Descripcion)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Descripcion)
        </dd>
    </dl>


    <h4>Artículo</h4>
    <br>

    @foreach (var std in ViewData["Articulo"] as IList<GestorDeTaller.Model.Articulo>)
    {

        <b> <label for="Name">Nombre:</label> </b> @std.Nombre <br>
        <b><label for="Name">Marca:</label> </b> @std.Marca <br>
    }
    <br>
    <h4>Mantenimiento</h4>
    <br>
    @foreach (var std in ViewData["Mantenimiento"] as IList<GestorDeTaller.Model.Mantenimiento>)
    {


        <b> <label for="Name">Descripcion:</label></b> @std.Descripcion <br>
    }
    <br>
    <h4>Cantidad utilizada en los mantenimientos</h4>
    <br>
    @foreach (var std in ViewData["CantidadDeRepuestos"] as IList<int>)
    {

        <b> <label for="Name">Cantidad:</label> </b> @std.ToString() <br>

    }
    <br>

</div>

<div>

    <div>
         <a href="javascript: history.go(-1)" class="btn btn-primary">Regresar</a>
    </div>
</div>