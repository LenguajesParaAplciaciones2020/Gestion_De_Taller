@model IEnumerable<GestorDeTaller.Model.Repuesto>

@{
    ViewData["Title"] = "ListarRepuestosAsociados";
}
@{
    Layout = "~/Views/Restringido/_Layout2.cshtml";
}
@{
    Layout = "~/Views/Shared/_Layout.cshtml"; //Esta sería la plantilla original del sitio web.
}
<h1>Lista de Repuestos </h1>

<p>

    <a class="btn btn-primary" asp-controller="Repuestos" asp-action="AgregarRepuesto">Agregar Repuesto</a>

</p>
<table class="table">
    <thead>
        <tr>

            <th>
                @Html.DisplayNameFor(model => model.Nombre)
            </th>

            <th>
                @Html.DisplayNameFor(model => model.Precio)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Descripcion)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>

                <td>
                    @Html.DisplayFor(modelItem => item.Nombre)
                </td>

                <td>
                    @Html.DisplayFor(modelItem => item.Precio)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Descripcion)
                </td>
                <td>
                    <a asp-action="EditarRepuesto" asp-route-id="@item.Id" class="btn btn-primary">Editar</a>
                    <a asp-action="DetalleDeRepuesto" asp-route-id="@item.Id" class="btn btn-primary">Detalles</a>
                </td>
            </tr>
        }
    </tbody>
</table>
<br>
<br>
<br>
<div>
    <a href="javascript: history.go(-1)" class="btn btn-primary">Cancelar</a>
</div>
